<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="inducesmile.com.sid.App.AlertasActivity">

    <Button
        android:id="@+id/refreshButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="mainActivityRefreshDB"
        android:text="Refresh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ScrollView
        android:id="@+id/scroller"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/refreshButton"
        app:layout_constraintVertical_bias="0.19">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TableLayout
                android:id="@+id/tableAlertas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_height="1px"
                    android:background="#d9d9d9"
                    android:id="@+id/headerRow"
                    android:layout_width="match_parent"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/alerta"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:padding="5dp"
                        android:text="Tipo Alerta"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="199dp"
                        tools:layout_editor_absoluteY="67dp" />

                    <TextView
                        android:id="@+id/valor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:padding="5dp"
                        android:text="Valor Registo"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/cultura"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:padding="5dp"
                        android:text="Cultura"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/data"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:padding="5dp"
                        android:text="Data"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/idalerta"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:padding="5dp"
                        android:text="idAlerta"
                        android:textStyle="bold" />


                </TableRow>
            </TableLayout>


        </HorizontalScrollView>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
